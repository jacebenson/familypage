model User {
  id                  String         @id @default(cuid())
  email               String         @unique
  name                String?
  salt                String
  hashedPassword      String
  resetToken          String?
  resetTokenExpires   String?
  resetTokenExpiresAt DateTime?
  FamilyMember        FamilyMember[]
  roles               String?        @default("user")
}

model Event {
  id          String  @id @default(cuid())
  title       String
  description String?
  location    String?
  url         String?
  status      String
  busyStatus  String
  organizer   String
  attendees   String?
  start       String
  duration    String
  geo         String?
  Family      Family? @relation(fields: [familyId], references: [id], onDelete: Cascade)
  familyId    String?
}

model Family {
  id           String         @id @default(cuid())
  name         String
  description  String?
  FamilyMember FamilyMember[]
  Event        Event[]
}

model FamilyMember {
  id         String  @id @default(cuid())
  familyId   String
  userId     String?
  admin      Boolean @default(false)
  inviteCode String
  Family     Family  @relation(fields: [familyId], references: [id], onDelete: Cascade)
  User       User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
}
