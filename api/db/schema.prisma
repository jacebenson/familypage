model User {
  id                String         @id @default(cuid())
  email             String         @unique
  name              String?
  salt              String
  hashedPassword    String
  resetToken        String?
  resetTokenExpires String?
  UserEvent         UserEvent[]
  FamilyMember      FamilyMember[]
}

model Event {
  id          String      @id @default(cuid())
  title       String
  description String?
  location    String?
  url         String?
  status      String
  busyStatus  String
  organizer   String
  attendees   String?
  start       String
  duration    String
  geo         String?
  UserEvent   UserEvent[]
}

model UserEvent {
  id      String @id @default(cuid())
  userId  String
  eventId String
  user    User   @relation(fields: [userId], references: [id])
  event   Event  @relation(fields: [eventId], references: [id])
}

model Family {
  id           String         @id @default(cuid())
  name         String
  description  String?
  FamilyMember FamilyMember[]
}

model FamilyMember {
  id              String  @id @default(cuid())
  familyId        String
  userId          String
  headOfHousehold Boolean @default(false)
  family          Family  @relation(fields: [familyId], references: [id])
  user            User    @relation(fields: [userId], references: [id])
}
